{
  "name": "compilothq",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "node scripts/ensure-docker.js && pnpm dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:strict": "pnpm typecheck && pnpm lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --build",
    "typecheck:watch": "tsc --build --watch",
    "validate": "pnpm format:check && pnpm lint:strict && pnpm test:unit",
    "test": "vitest",
    "test:unit": "vitest run __tests__/unit",
    "test:integration": "vitest run __tests__/integration",
    "test:e2e": "pnpm --filter web test:e2e",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "predev": "node scripts/ensure-docker.js",
    "docker:check": "node scripts/check-docker.js",
    "docker:up": "node scripts/ensure-docker.js",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:restart": "docker compose -f docker/docker-compose.yml restart",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "docker:logs:postgres": "docker logs -f compilothq-postgres",
    "docker:logs:redis": "docker logs -f compilothq-redis",
    "docker:ps": "docker compose -f docker/docker-compose.yml ps",
    "docker:health": "node scripts/docker-health.js",
    "docker:reset": "docker compose -f docker/docker-compose.yml down -v && docker compose -f docker/docker-compose.yml up -d && node scripts/ensure-docker.js",
    "predb:generate": "node scripts/ensure-docker.js",
    "db:generate": "pnpm --filter @compilothq/database generate",
    "predb:migrate": "node scripts/ensure-docker.js",
    "db:migrate": "pnpm --filter @compilothq/database migrate",
    "predb:push": "node scripts/ensure-docker.js",
    "db:push": "pnpm --filter @compilothq/database push",
    "predb:studio": "node scripts/ensure-docker.js",
    "db:studio": "pnpm --filter @compilothq/database studio",
    "predb:seed": "node scripts/ensure-docker.js",
    "db:seed": "pnpm --filter @compilothq/database seed",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.0",
    "@eslint/js": "^9.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "concurrently": "^9.1.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.8",
    "wait-on": "^8.0.1"
  }
}
