{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    // Override strict options incompatible with CommonJS + Prisma
    "verbatimModuleSyntax": false,
    "exactOptionalPropertyTypes": false, // Prisma types don't support this yet
    // Path mapping for Prisma generated client
    "paths": {
      ".prisma/client": ["./node_modules/.prisma/client"]
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "vitest.config.mts",
    "prisma/seed.ts",
    "prisma/seeds/**/*"
  ],
  "exclude": ["node_modules", "dist", "prisma/migrations"],
  "references": [
    {
      "path": "../validation"
    }
  ]
}
