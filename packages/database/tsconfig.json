{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "verbatimModuleSyntax": false,
    "exactOptionalPropertyTypes": false
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "vitest.config.mts",
    "prisma/seed.ts",
    "prisma/seeds/**/*",
    "prisma.config.ts",
    "generated/**/*"
  ],
  "exclude": ["node_modules", "dist", "prisma/migrations"],
  "references": [
    {
      "path": "../validation"
    }
  ]
}
