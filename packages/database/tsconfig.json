{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    // Override strict options incompatible with CommonJS + Prisma
    "verbatimModuleSyntax": false,
    "exactOptionalPropertyTypes": false // Prisma types don't support this yet
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "vitest.config.mts",
    "prisma/seed.ts",
    "prisma/seeds/**/*"
  ],
  "exclude": ["node_modules", "dist", "prisma/migrations"]
}
