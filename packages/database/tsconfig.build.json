{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "verbatimModuleSyntax": false,
    "exactOptionalPropertyTypes": false
  },
  "include": [
    "src/**/*",
    "prisma/seed.ts",
    "prisma/seeds/**/*",
    "prisma.config.ts",
    "generated/**/*"
  ],
  "exclude": ["node_modules", "dist", "prisma/migrations", "__tests__"]
}
