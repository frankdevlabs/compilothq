    "semantic": {
      "background": {
        "default": {
          "$value": "{color.primitive.white}",
          "$description": "Main page background (light mode) - maps to --background"
        },
        "subtle": {
          "$value": "{color.primitive.cream.100}",
          "$description": "Subtle background for cards, surfaces - maps to --card or --muted"
        },
