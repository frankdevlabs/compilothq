          "$value": "{color.primitive.cream.200}",
          "$description": "Muted background for disabled states - maps to --muted"
        },
        "dark": {
          "$value": "{color.primitive.navy.900}",
          "$description": "Dark mode background - maps to dark: --background"
        }
      },
      "text": {
