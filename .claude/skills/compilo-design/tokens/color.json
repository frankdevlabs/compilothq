        "default": {
          "$value": "{color.primitive.navy.900}",
          "$description": "Primary brand color - dark navy - maps to --primary (light mode)"
        },
        "hover": {
          "$value": "{color.primitive.navy.800}",
          "$description": "Accent hover state - slightly lighter navy"
        },
        "subtle": {
          "$value": "{color.primitive.cream.100}",
          "$description": "Subtle accent for backgrounds - cream - maps to --accent"
