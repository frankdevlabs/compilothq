{
  "font": {
    "family": {
      "heading": {
        "$type": "fontFamily",
        "$value": "Ubuntu, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "$description": "Heading font - Ubuntu from franksblog.nl aesthetic"
      },
      "body": {
        "$type": "fontFamily",
        "$value": "Raleway, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "$description": "Body text font - Raleway for readability"
      },
      "mono": {
        "$type": "fontFamily",
        "$value": "'Courier New', monospace",
        "$description": "Monospace font for code"
      }
    },
    "size": {
      "$type": "dimension",
      "xs": {
        "$value": "12px",
        "$description": "0.75rem - Extra small - badges, labels, footnotes"
      },
      "sm": {
        "$value": "14px",
        "$description": "0.875rem - Small - captions, metadata, secondary text"
      },
      "base": {
        "$value": "16px",
        "$description": "1rem - Base body text (default)"
      },
      "lg": {
        "$value": "18px",
        "$description": "1.125rem - Large body text, emphasized content"
      },
      "xl": {
        "$value": "20px",
        "$description": "1.25rem - Small headings (H3-H4)"
      },
      "2xl": {
        "$value": "24px",
        "$description": "1.5rem - Medium headings (H2), section titles"
      },
      "3xl": {
        "$value": "30px",
        "$description": "1.875rem - Large headings (H1), page titles"
      },
      "4xl": {
        "$value": "36px",
        "$description": "2.25rem - Hero headings, major page titles"
      }
    },
    "weight": {
      "$type": "fontWeight",
      "light": {
        "$value": "300",
        "$description": "Light weight - minimal use"
      },
      "normal": {
        "$value": "400",
        "$description": "Regular/normal weight - body text default"
      },
      "medium": {
        "$value": "500",
        "$description": "Medium weight - emphasis, labels"
      },
      "semibold": {
        "$value": "600",
        "$description": "Semibold - not currently used, here for completeness"
      },
      "bold": {
        "$value": "700",
        "$description": "Bold - headings, strong emphasis"
      }
    },
    "lineHeight": {
      "$type": "number",
      "tight": {
        "$value": "1.25",
        "$description": "Tight line height - headings, dense data displays"
      },
      "normal": {
        "$value": "1.5",
        "$description": "Normal line height - body text, standard content"
      },
      "relaxed": {
        "$value": "1.75",
        "$description": "Relaxed line height - long-form content, reading"
      }
    }
  }
}
